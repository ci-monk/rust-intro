{
  "_comment": "this project is not a node.js one, package.json is just used to define some metadata",
  "scripts": {
    "cm": "git cz",
    "lint": "mega-linter-runner -p . --fix",
    "lint-ci": "lab ci lint",
    "slscan": "docker run --rm -e WORKSPACE=$(pwd) -e ENABLE_OSS_RISK=false -v $(pwd):/app shiftleft/scan scan --build",
    "secrets": "gitleaks --verbose -c .gitleaks.toml -p ."
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "16.0.1",
    "@commitlint/config-conventional": "17.0.2",
    "commitizen": "4.2.4",
    "mega-linter-runner": "5.4.0"
  }
}
